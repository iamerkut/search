<?xml version="1.0" encoding="utf-8"?>
<jtlshopplugin>
  <Name>Dynamic Search Bar</Name>
  <Description>Ürün, kategori ve üreticide canlı arama (suggest).</Description>
  <Author>Erkut SAHIN</Author>
  <URL>https://example.com</URL>
  <XMLVersion>100</XMLVersion>
  <MinShopVersion>5.6.0</MinShopVersion>
  <PluginID>dynamic_search_bar</PluginID>
  <Version>102</Version>
  <CreateDate>2025-10-21</CreateDate>

  <Install>
    <Bootstrapper>Plugin\dynamic_search_bar\Bootstrap</Bootstrapper>

    <Adminmenu>
      <Tab>
        <Name>Dynamic Search</Name>
        <File>adminmenu/settings.php</File>
      </Tab>
    </Adminmenu>

    <Locales>
      <Variable>
        <Name>dsb_placeholder</Name>
        <Description>Placeholder text for the search input</Description>
        <VariableLocalized iso="GER">Suchbegriff eingeben</VariableLocalized>
        <VariableLocalized iso="ENG">Enter search term</VariableLocalized>
      </Variable>
      <Variable>
        <Name>dsb_results</Name>
        <Description>Heading for result list</Description>
        <VariableLocalized iso="GER">Ergebnisse</VariableLocalized>
        <VariableLocalized iso="ENG">Results</VariableLocalized>
      </Variable>
      <Variable>
        <Name>dsb_show_all</Name>
        <Description>Link label to show all results</Description>
        <VariableLocalized iso="GER">Alle anzeigen</VariableLocalized>
        <VariableLocalized iso="ENG">Show all</VariableLocalized>
      </Variable>
    </Locales>

    <CSS>
      <file>
        <name>search.css</name>
        <priority>5</priority>
      </file>
    </CSS>

    <JS>
      <file>
        <name>search.js</name>
        <priority>5</priority>
        <position>body</position>
      </file>
    </JS>
  </Install>
</jtlshopplugin>
